{
  "Logging": {
    "File": {
      "BasePath": "Logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 10485760,
      "LogLevel": {
        "weather": "Information",
        "Default": "Debug"
      },
      "IncludeScopes": true,
      "MaxQueueSize": 100,
      "Files": [
        {
          "Path": "weather-<date:yyyy>-<date:MM>-<date:dd>.log"
        }
      ]
    }
  },
  "AllowedHosts": "*"
}
